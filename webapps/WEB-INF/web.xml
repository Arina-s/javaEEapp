<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                      http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
  version="4.0">

  <servlet>
    <servlet-name>MainServlet</servlet-name>
    <servlet-class>com.arinahitech.MainServlet</servlet-class>
  </servlet>

  <servlet>
    <servlet-name>ShopServlet</servlet-name>
    <servlet-class>com.arinahitech.ShopServlet</servlet-class>
  </servlet>

  <servlet>
    <servlet-name>UsersServlet</servlet-name>
    <servlet-class>com.arinahitech.UsersServlet</servlet-class>
  </servlet>

  <servlet>
    <servlet-name>list</servlet-name>
    <jsp-file>/list.jsp</jsp-file>
  </servlet>

  <servlet>
    <servlet-name>SetCookiesServlet</servlet-name>
    <servlet-class>com.arinahitech.SetCookiesServlet</servlet-class>
  </servlet>

  <servlet>
    <servlet-name>GetCookiesServlet</servlet-name>
    <servlet-class>com.arinahitech.GetCookiesServlet</servlet-class>
  </servlet>

  
  <servlet-mapping>
    <servlet-name>MainServlet</servlet-name>
    <url-pattern>/main</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>ShopServlet</servlet-name>
    <url-pattern>/shop</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>list</servlet-name>
    <url-pattern>/myList</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>SetCookiesServlet</servlet-name>
    <url-pattern>/setcppkies</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>GetCookiesServlet</servlet-name>
    <url-pattern>/getcppkies</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>UsersServlet</servlet-name>
    <url-pattern>/users</url-pattern>
  </servlet-mapping>

</web-app>